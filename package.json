{
  "name": "test-bundler",
  "version": "1.0.0",
  "description": "Test kinds of bundlers with the same SPA project with React and TypeScript.",
  "keywords": [
    "bundler",
    "esbuild",
    "react",
    "rollup",
    "swc",
    "typescript",
    "webpack"
  ],
  "license": "MIT",
  "author": {
    "name": "Ritchie Zhu",
    "email": "laozhu.me@gmail.com",
    "url": "https://laozhu.me"
  },
  "main": "dist/bundle.js",
  "scripts": {
    "build": "webpack --node-env production",
    "clean": "rimraf coverage dist .eslintcache .stylelintcache *.tsbuildinfo",
    "commit": "git-cz",
    "commit:dirty": "git-cz --no-verify",
    "eslint": "eslint --cache --ext .js,.mjs,.jsx,.ts,.tsx,.md,.mdx .",
    "eslint:fix": "yarn run eslint --fix",
    "lint": "run-s stylelint eslint prettier",
    "lint:fix": "run-s stylelint:fix eslint:fix prettier:fix",
    "prettier": "prettier --check \"**/*.{json,html,md,mdx}\"",
    "prettier:fix": "prettier --write \"**/*.{json,html,md,mdx}\"",
    "serve": "serve dist",
    "start": "webpack serve --node-env development",
    "stylelint": "stylelint --cache --aei \"**/*.{css,jsx,tsx}\"",
    "stylelint:fix": "yarn run stylelint --fix",
    "test": "jest --cache --passWithNoTests --watch",
    "test:ci": "jest --ci --passWithNoTests"
  },
  "lint-staged": {
    "**/*.{css,jsx,tsx}": "yarn run stylelint",
    "**/*.{js,mjs,jsx,ts,tsx,md,mdx}": "yarn run eslint",
    "**/*.{json,html,md,mdx}": "yarn run prettier"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 edge version",
      "last 1 firefox version",
      "last 1 safari version",
      "last 1 ios version",
      "last 1 android version"
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.16.0",
    "clsx": "^1.1.1",
    "core-js": "^3.19.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-react-constant-elements": "^7.16.0",
    "@babel/plugin-transform-react-inline-elements": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@fastcms/eslint-config": "^1.8.4",
    "@fastcms/stylelint-config": "^1.5.3",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.1",
    "@swc/core": "^1.2.106",
    "@swc/jest": "^0.2.5",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "@types/webpack-env": "^1.16.3",
    "babel-loader": "^8.2.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "browserslist": "^4.17.6",
    "commitizen": "^4.2.4",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.5.0",
    "css-minimizer-webpack-plugin": "^3.1.1",
    "cz-emoji": "^1.3.1",
    "dotenv-webpack": "^7.0.3",
    "esbuild": "^0.13.12",
    "esbuild-loader": "^2.16.0",
    "eslint": "^7.32.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.4.0",
    "html-loader": "^3.0.1",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "mini-css-extract-plugin": "^2.4.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.11",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^6.2.0",
    "postcss-normalize": "^10.0.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.4.1",
    "prettier-plugin-packagejson": "^2.2.13",
    "process": "^0.11.10",
    "react-refresh": "^0.10.0",
    "rollup": "^2.59.0",
    "serve": "^12.0.1",
    "style-loader": "^3.3.1",
    "stylelint": "^14.0.1",
    "swc-loader": "^0.1.15",
    "terser-webpack-plugin": "^5.2.4",
    "typescript": "^4.4.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.4.0",
    "webpack-merge": "^5.8.0",
    "worker-loader": "^3.0.8"
  }
}
